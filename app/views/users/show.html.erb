<h1><%= @user.name %>'s Customer Page!</h1>
<h4><%= @message %></h4>
<h3>Current Funds: <%= @user.credit %></h3>
<% if isAdmin(session) %>
  <h3>Admin Menu</h3>
  <p><%= link_to 'Edit/Delete Users', admin_users_path %></p>
  <p><%= link_to 'Edit/Delete Meals', admin_meals_path %></p>
<% end %>
<h5>--------------------------------------------------------------------------</h5>
<p> <strong>
  <%= link_to 'Edit Account', edit_user_path(@user) %> || <%= link_to 'Log Out', logout_path %> || <%= link_to 'Delete Account', delete_user_path(@user) %>
</strong> </p>
<p><strong><%= link_to "Add Funds", add_funds_path(@user) %></strong></p>
<h5>--------------------------------------------------------------------------</h5>
<h3>
  <%= link_to "Place New Order", new_user_delivery_path(@user) %>
</h3>
<br>
<%= render partial: "deliveries/show", locals: {sel_user: @user} %>
