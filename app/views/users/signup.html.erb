<%= form_for @user do | f | %>
    <h3><%= @message %><h3>
    <br>
    <%= f.label :username %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <br> 
    <%= f.label :password %>
    <%= f.text_field :password %>
    <br>
    <%= f.submit %>
<% end %>