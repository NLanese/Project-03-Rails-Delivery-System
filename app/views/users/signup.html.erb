<h1>Create a New Account!</h1>
<h3><%= @message %><h3>
<%= form_with model: @user do | f | %>
    <br>
    <%= f.label :username %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <br> 
    <%= f.label :password %>
    <%= f.text_field :password %>
    <br>
    <%= f.submit %>
<% end %>